<?xml version="1.0"?>
<odoo>

    <record id="estate_pivot" model="ir.ui.view">
        <field name="name">Estate Graph</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="selling_price" type="measure" string="Selling price"/>


                <field name="garden_area" invisible="1" />
                <field name="living_area" invisible="1" />
                <field name="bedrooms" invisible="1" />
                <field name="facades" invisible="1" />
                <field name="expected_price" invisible="1" />
                <field name="best_price" invisible="1" />
                <field name="total_area" invisible="1" />
            </pivot>
        </field>
    </record>


    <record id="estate_graph" model="ir.ui.view">
        <field name="name">Estate Graph</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <graph>
                <field name="tag_ids" />
                <field name="selling_price" type="measure" string="Selling price"/>

                <field name="best_price" type="measure" string="Best price"/>
                <field name="expected_price" type="measure" string="Expected price" />


                <field name="garden_area" invisible="1" />
                <field name="living_area" invisible="1" />
                <field name="bedrooms" invisible="1" />
                <field name="facades" invisible="1" />
                <field name="total_area" invisible="1" />
            </graph>
        </field>
    </record>



    <record id="estate_kanban" model="ir.ui.view">
        <field name="name">Estate Kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id">

                <field name="state"/>
                <templates>
                    <t t-name="card">
                        <field name="name"/>
                        <field name="property_type_id"/>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field':'color'}"/>

                        <div t-if="record.state.raw_value=='offer_received'">
                            <p>Best price</p>
                            <field name="best_price"/>

                        </div>
                        <div t-if="record.state.raw_value=='offer_accepted'">
                            <p>Best price</p>
                            <field name="selling_price"/>

                        </div>

                    </t>
                </templates>

            </kanban>
        </field>
    </record>



    <record id="estate_form" model="ir.ui.view">
        <field name="name">Form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml" >

            <form string="Properties">
                <header>
                    <button name="sold_action" type="object" string="Sold" class="oe_highlight" invisible="state=='sold' or state=='cancelled'"/>
                    <button name="cancel_action" type="object" string="Cancel" class="button_box" invisible="state=='sold' or state=='cancelled'"/>
                    <button name="%(estate_property_status_action)d" type="action" string="Update State" class="button_box" />

                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold" options="{'clickable':1}"/>
                </header>
                <sheet>
                    <group>

                        <group col="1" style="width:100vw">

                            <div class="oe_title" style="width:100vw" >
                                <h1>

                                    <field name="name" placeholder="Property Title"/>

                                </h1>

                            </div>


                        </group>
                        <group>

                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>


                        </group>

                        <group>
                            <field name="property_type_id" options="{'no_create':true}"/>


                        </group>

                        <group>
                            <field name="postcode" />


                        </group>

                        <group>
                            <field name="date_availability" />


                        </group>

                        <group>
                            <field name="expected_price" />


                        </group>

                        <group>
                            <field name="selling_price" />


                        </group>

                        <group>
                            <field name="best_price" />



                        </group>

                        <group>
                            <field name="active" invisible="1" />


                        </group>



                    </group>

                    <notebook>
                        <page string="Description">
                            <group>

                                <field name="description" />
                            </group>


                            <group>

                                <field name="bedrooms" />
                            </group>

                            <group>

                                <field name="living_area" />
                            </group>

                            <group>

                                <field name="facades" />
                            </group>

                            <group>

                                <field name="garage" />
                            </group>

                            <group>

                                <field name="garden" />
                            </group>


                            <group>

                                <field name="garden_area" invisible="not garden" />
                            </group>

                            <group>

                                <field name="garden_orientation" invisible="not garden" />
                            </group>

                            <group>

                                <field name="total_area" />
                            </group>

                            <!-- <group>

                                <field name="state" />
                            </group> -->


                            
                        

                        </page>
                        <page string="Other Infos">
                            <group>

                                <field name="salesperson"/>
                            </group>
                            <group>
                                <field name="buyer"/>
                            </group>
                    
                        </page>


                        <page string="Offers">
                            <field name="offer_ids" readonly="state=='offer_accepted' or state=='sold' or state=='cancelled'"/>
                        </page>

                    </notebook>
                </sheet>

            </form>
        </field>
    </record>


    <record id="estate_list1" model="ir.ui.view">
        <field name="name">List</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties">
                <field name="name" string="Title"/>
                <field name="property_type_id" string="Property"/>
                <field name="active"/>
                <field name="description"/>


            </list>

        </field>

    </record>



    <record id="estate_list" model="ir.ui.view">
        <field name="name">List</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties" decoration-success="state=='offer_received' or state =='offer_accepted'" decoration-bf="state=='offer_accepted'" decoration-muted="state=='sold'" >
                <field name="name"/>
                <field name="property_type_id" string="Property Type"/>
                <field name="postcode"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field':'color'}"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" optional="1"/>
                <field name="state" invisible="0"/>


            </list>

        </field>

    </record>

    <record id="estate_search" model="ir.ui.view">
        <field name="name">Search Properties</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Properties">
                <field name="name" />
                <field name="description" />
                <field name="state" invisible="1" />
                <field name="total_area" filter_domain="[('total_area', '&gt;=', self)]" />

                <separator />

                <filter string="Not Active" name="inactive" domain="[('active','=','False')]"  />
                <filter string="Available" name="available" domain="[('state','in',('new','offer_received','offer_accepted'))]"  />
                    
                <group>
                    <filter name="group_by" context="{'group_by': 'state'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- <record id="estate_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form,search</field>

    </record> -->

    <record id="estate_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,list,form,search,graph,pivot</field>
        <!-- <field name="views">
        </field> -->
        <field name="view_id" ref="estate_list" />
        <field name="context">{'search_default_available': True}</field>

    </record>




</odoo>