<?xml version="1.0"?>
<odoo>



    <record id="estate_form" model="ir.ui.view">
        <field name="name">Form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml" >
            <form string="Properties">
                <!-- <header>
                    <button action="action_do_someting" type="object" string="Do Something"/>
                </header> -->
                <sheet>
                    <group>

                        <group col="1" style="width:100vw">

                                <!-- <field name="name"/> -->
                            <div class="oe_title" style="width:100vw" >
                                <!-- <label for="name" string="Property"/> -->
                                <h1>

                                    <field name="name" placeholder="Property Title"/>

                                </h1>

                            </div>


                        </group>
                        <!-- <separator/> -->
                        <group>

                            <field name="tag_ids" widget="many2many_tags"/>


                        </group>

                        <group>
                            <field name="property_type_id" />


                        </group>

                        <group>
                            <field name="postcode" />


                        </group>

                        <group>
                            <field name="date_availability" />


                        </group>

                        <group>
                            <field name="expected_price" />


                        </group>

                        <group>
                            <field name="selling_price" />


                        </group>

                        <group>
                            <field name="best_price" />


                        </group>


                    </group>

                    <notebook>
                        <page string="Description">
                            <group>

                                <field name="description" />
                            </group>


                            <group>

                                <field name="bedrooms" />
                            </group>

                            <group>

                                <field name="living_area" />
                            </group>

                            <group>

                                <field name="facades" />
                            </group>

                            <group>

                                <field name="garage" />
                            </group>

                            <group>

                                <field name="garden" />
                            </group>


                            <group>

                                <field name="garden_area" />
                            </group>

                            <group>

                                <field name="garden_orientation" />
                            </group>

                            <group>

                                <field name="total_area" />
                            </group>


                            
                        

                        </page>
                        <page string="Other Infos">
                            <group>

                                <field name="salesperson"/>
                            </group>
                            <group>
                                <field name="buyer"/>
                            </group>
                    
                        </page>


                        <page string="Offers">
                            <group>
                                 <field name="offer_ids" />

                            </group>
                        </page>

                    </notebook>
                </sheet>

            </form>
        </field>
    </record>


    <record id="estate_list1" model="ir.ui.view">
        <field name="name">List</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties">
                <field name="name"/>
                <field name="active"/>
                <field name="description"/>


            </list>

        </field>

    </record>



    <record id="estate_list" model="ir.ui.view">
        <field name="name">List</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties">
                <field name="name"/>
                <field name="active"/>
                <field name="description"/>
                <field name="state"/>


            </list>

        </field>

    </record>

    <record id="estate_search" model="ir.ui.view">
        <field name="name">Search Properties</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Properties">
                <field name="name" />
                <field name="description" />
                <field name="state" invisible="1" />
                <separator />

                <filter string="test inactive" name="inactive" domain="[('active','=','False')]"  />
                <group>
                    
                    <filter name="group_by" context="{'group_by': 'state'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- <record id="estate_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form,search</field>

    </record> -->

    <record id="estate_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form,search</field>
        <!-- <field name="views">
        </field> -->
        <field name="view_id" ref="estate_list" />

    </record>




</odoo>