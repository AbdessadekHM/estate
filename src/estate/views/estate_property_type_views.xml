<odoo>

    <record id="estate_property_type_list" model="ir.ui.view">
        <field name="name">Property list</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <list string="Property List">
                <field name="sequence" widget="handle"/>
                <field name="name" />
            </list>
        </field>
    </record>


    <record id="estate_property_form" model="ir.ui.view">
        <field name="name">Property Form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Property Form">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="action" name="%(estate.estate_property_offer_action)d" icon="fa-icon" title="Offers" class="oe_stat_button"/>
                    </div>
                    <group>
                        <div class="oe_title">
                            <h1>

                                <field name="name"/>
                            </h1>

                        </div>
                    </group>

                    <notebook>
                        <page string="Properties">
                            <field name="property_ids">
                                <list>

                                    <field name="name"/>
                                    <field name="date_availability" />
                                    <field name="expected_price" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>

            </form>
        </field> 
     </record>


    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Property Type</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
