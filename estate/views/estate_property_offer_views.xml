<odoo>

    <record id="estate_property_offer_views_list" model="ir.ui.view">
        <field name="name">Offer list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Offers" >
                <field name="price"/>
                <field name="status"/>
                <field name="partner_id"/>
                <field name="property_id"/>

            </list>
        </field>


    </record>


    <record id="estate_property_offer_views_form" model="ir.ui.view">
        <field name="name">Offer list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price"/>
                    </group>

                    <group>
                        <field name="status"/>
                    </group>

                    <group>
                        <field name="partner_id"/>
                    </group>

                    <group>
                        <field name="property_id"/>
                    </group>

                    <group>
                        <field name="validity"/>
                    </group>

                    <group>
                        <field name="date_deadline"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
