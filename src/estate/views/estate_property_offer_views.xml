<odoo>

    <record id="estate_property_offer_views_list" model="ir.ui.view">
        <field name="name">Offer list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="test" editable="bottom" decoration-danger="context.get('change_color') and status=='refused'" decoration-success="status=='accepted'">
                <field name="partner_id"/>
                <field name="price"/>
                <field name="status" column_invisible="1"/>
                
                <field name="property_id"/>
                <button name="action_confirm" type="object" icon="fa-check" title="confirm" invisible="status=='accepted' or status=='refused'"/>
                <button name="action_cancel" type="object" icon="fa-times" title="cancel" invisible="status=='accepted' or status=='refused'"/>

            </list>
        </field>


    </record>


    <record id="estate_property_offer_views_form" model="ir.ui.view">
        <field name="name">Offer list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price"/>
                    </group>

                    <group>
                        <field name="status"/>
                    </group>

                    <group>
                        <field name="partner_id"/>
                    </group>

                    <group>
                        <field name="property_id"/>
                    </group>

                    <!-- <group>
                        <field name="validity"/>
                    </group>

                    <group>
                        <field name="date_deadline"/>
                    </group> -->
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Offer Action</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>

    </record>

</odoo>
